<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--  bean 的引用 -->

  <bean id="birthDate" class="java.util.Date"></bean>


   <bean id="mouse" class="com.cl.bean.Mouse">
       <property name="mouseName" value="jerry"></property>
       <property name="birthDate" ref="birthDate"></property>

   </bean>


    <bean id="cat" class="com.cl.bean.Cat">
        <property name="catName" value="Tom"></property>
        <property name="caughtMouse" ref="mouse"></property>
    </bean>


    <bean id="cat2" class="com.cl.bean.Cat">
        <property name="catName" value="Cat2"></property>
        <property name="caughtMouse">
            <bean class="com.cl.bean.Mouse">
                <property name="mouseName" value="mouse2"></property>
                <property name="birthDate">
                    <bean class="java.util.Date"></bean>
                </property>
            </bean>
        </property>
     </bean>

</beans>